<div id="<%= dom_id category %>">
  <div class="block font-medium mb-1">
    Name: <strong class="block font-medium mb-1"> <%= category.name %></strong>
  </div>

 <div class="block font-medium mb-1">
  Color: <span class="rounded-lg py-1 ml-2 px-3 <%= tailwind_color(category) %> inline-block font-medium"><%= category.color %></span>
  </div>

</div>
<div>
  <% if action_name != "show" %>
    <%= link_to "Show this category", category, class: "rounded-lg py-3 px-5 bg-sky-200 inline-block font-medium" %>
    <%= link_to "Edit this category", edit_category_path(category), class: "rounded-lg py-3 ml-2 px-5 bg-sky-200 inline-block font-medium" %>
    <hr class="mt-6">
</div>
  <% end %>

